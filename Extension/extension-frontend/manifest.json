{
  "manifest_version": 3,
  "name": "React Sidebar Extension",
  "description": "Injects React app as sidebar when icon is clicked",
  "version": "1.0",
  "action": {
    "default_title": "Open React Sidebar",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["*.html", "*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
